{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error", //informar erro para todas as regras de hooks
      "react-hooks/exhaustive-deps": "warn", //exhaustive deps no useEffect
      "react/prop-types": "off", //usando TypeScript entao nao precisa
      "react/react-in-jsx-scope": "off", //No next nao precisa ativar
      "@typescript-eslint/explicit-module-boundary-types": "off" //Outra regar do TS
    }
}